<h3>{{viewTitle}}</h3>
<form action="/employee" method="post" autocomplete="off">
<input type="hidden" name="id" value={{employee._id}}>
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" required value={{employee.fullName}}>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Email" required value={{employee.email}}>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" required value={{employee.city}}>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" required value={{employee.mobile}}>
        </div>
    </div>
     <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit<i class="fa fa-database ml-2"></i></button>
            <a class="btn btn-secondary" href="/employee/list">View All<i class="fa fa-list ml-2"></i></a>
        </div>
</form>